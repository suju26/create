        </activity>
        <activity
            android:name=".PageFragment"
            android:label="@string/title_activity_page_fragment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.Readme_1"
            android:label="@string/title_activity_readme_1"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.Macro_readme"
            android:label="@string/title_activity_macro_readme"
            android:screenOrientation="portrait" >
